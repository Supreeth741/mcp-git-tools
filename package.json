{
  "name": "mcp-git-tools",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Git operations",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:http": "node dist/server.js --http",
    "dev": "ts-node-esm src/server.ts",
    "dev:http": "ts-node-esm src/server.ts --http",
    "test": "node test-http.js",
    "test:endpoints": "node test-http.js",
    "test:git": "node test-git.js"
  },
  "keywords": [
    "mcp",
    "git",
    "model-context-protocol"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
